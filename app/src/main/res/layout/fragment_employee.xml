<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.EmployeeFragment"
        android:id="@+id/employee_content">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:src="@tools:sample/avatars"
            android:id="@+id/empl_avatar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="@string/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empl_name_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/empl_avatar"
            android:layout_marginTop="16dp"
            android:textSize="16sp"/>
    <TextView
            android:text="F_Name L_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empl_name_value"
            app:layout_constraintTop_toTopOf="@+id/empl_name_title"
            app:layout_constraintStart_toEndOf="@+id/empl_name_title"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="16sp"/>

    <TextView
            android:text="@string/birthDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empl_birthday_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/empl_name_value"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
    <TextView
            android:text="00.00.0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empl_birthday_value"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/empl_birthday_title"
            app:layout_constraintStart_toEndOf="@+id/empl_birthday_title"
            android:textSize="16sp"/>

    <TextView
            android:text="@string/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empl_age_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/empl_birthday_title"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
    <TextView
            android:text="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empl_age_value"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/empl_age_title"
            app:layout_constraintStart_toEndOf="@+id/empl_age_title"
            android:textSize="16sp"/>

    <TextView
            android:text="@string/specialty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empl_specialty_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/empl_age_title"
            android:layout_marginTop="10dp"
            android:textSize="16sp"/>
    <TextView
            android:text="Manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/empl_specialty_value"
            app:layout_constraintTop_toTopOf="@+id/empl_specialty_title"
            app:layout_constraintStart_toEndOf="@+id/empl_specialty_title"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="16sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>